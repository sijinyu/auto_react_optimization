{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "target": "ES6",
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "bin/**/*", "optimizer/**/*"],
  "exclude": ["node_modules", "dist"]
}
