{
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./",
		"target": "ES6",
		"lib": ["es2015", "es2016", "es2017"],
		"module": "commonjs",
		"jsx": "react",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*", "bin/**/*", "optimizer/**/*"],
	"exclude": ["node_modules", "dist", "**/__tests__/*"]
}
